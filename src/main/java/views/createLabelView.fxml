<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@basetheme.css"
	maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
	minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<Label text="Label" BorderPane.alignment="CENTER">
			<font>
				<Font size="24.0" />
			</font>
			<BorderPane.margin>
				<Insets top="50.0" />
			</BorderPane.margin>
		</Label>
	</top>
	<center>
		<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
			maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<children>
				<Label text="Enter Name for Label:">
					<VBox.margin>
						<Insets top="20.0" />
					</VBox.margin>
				</Label>
				<TextField maxHeight="-Infinity" maxWidth="-Infinity">
					<VBox.margin>
						<Insets bottom="20.0" />
					</VBox.margin>
				</TextField>
				<Label text="Pick a Color" />
				<Button alignment="CENTER" contentDisplay="CENTER"
					maxWidth="150.0" mnemonicParsing="false"
					style="-fx-background-color: yellow;" />
				<Button alignment="CENTER" contentDisplay="CENTER"
					maxWidth="150.0" mnemonicParsing="false"
					style="-fx-background-color: Orange;" />
				<Button alignment="CENTER" contentDisplay="CENTER"
					maxWidth="150.0" mnemonicParsing="false"
					style="-fx-background-color: Red;" />
				<Button alignment="CENTER" contentDisplay="CENTER"
					maxWidth="150.0" mnemonicParsing="false"
					style="-fx-background-color: Purple;" />
				<Button alignment="CENTER" contentDisplay="CENTER"
					maxWidth="150.0" mnemonicParsing="false"
					style="-fx-background-color: Blue;" />
				<Button mnemonicParsing="false" text="Create Label">
					<VBox.margin>
						<Insets top="20.0" />
					</VBox.margin>
				</Button>
			</children>
			<BorderPane.margin>
				<Insets bottom="50.0" left="50.0" right="50.0" top="20.0" />
			</BorderPane.margin>
		</VBox>
	</center>
</BorderPane>
